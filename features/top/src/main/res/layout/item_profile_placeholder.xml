<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:background="#CCCCCC"
        app:shapeAppearanceOverlay="@style/CircleImage" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profile"
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_account"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="#CCCCCC"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CircleImage" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:background="#CCCCCC"
                app:layout_constraintBottom_toTopOf="@+id/tv_description"
                app:layout_constraintDimensionRatio="10:1"
                app:layout_constraintEnd_toStartOf="@+id/ic_next"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/iv_account"
                app:layout_constraintTop_toTopOf="@+id/iv_account"
                app:layout_constraintVertical_chainStyle="packed"
                app:shapeAppearanceOverlay="@style/CircleImage" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#CCCCCC"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintBottom_toBottomOf="@+id/iv_account"
                app:layout_constraintDimensionRatio="3:1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/iv_account"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                app:shapeAppearanceOverlay="@style/CircleImage"
                tools:text="1-е місце" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_place"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="#CCCCCC"
                android:text="5 місце"
                android:textColor="#2D3047"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_account"
                app:shapeAppearanceOverlay="@style/CircleImage" />

            <ImageView
                android:id="@+id/ic_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_navigate_next_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="170dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:background="#CCCCCC"
        app:shapeAppearanceOverlay="@style/CircleImage" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tv_date"
        android:layout_width="72dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:background="#CCCCCC"
        android:text="Останнє оновлення:"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:shapeAppearanceOverlay="@style/CircleImage" />


</androidx.appcompat.widget.LinearLayoutCompat>