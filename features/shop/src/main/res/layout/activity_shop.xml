<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/Widget.MaterialComponents.Toolbar.Surface"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@drawable/ic_round_arrow_back_24"
            app:title="Преміум"
            app:titleCentered="true"
            app:titleTextAppearance="@style/ActionTitle" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_discount"
                    android:visibility="gone"
                    style="@style/Widget.Material3.CardView.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EFBD46"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_title_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/e_ukraine_medium"
                            android:text="Знижка на підписку!"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintBottom_toTopOf="@+id/tv_desc_price2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_desc_price2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginStart="16sp"
                            android:fontFamily="@font/e_ukraine_medium"
                            android:text="Вітаємо! Ти маєш знижку на підписку"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_title_price2" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_sub23"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:backgroundTint="#0F1547"
                            android:clickable="false"
                            android:fontFamily="@font/e_ukraine_medium"
                            android:text="Оформити підписку"
                            android:textColor="#FEFEFE"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc_price2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_share"
                    style="@style/Widget.Material3.CardView.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_title_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/e_ukraine_medium"
                            android:text="Знижка 🔥"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintBottom_toTopOf="@+id/tv_desc_price"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_desc_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/e_ukraine_medium"
                            android:text="Відмічай нас в Інстаграмі\nта отримуй знижку на підписку"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_title_price" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_sub2"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:backgroundTint="#EFBD46"
                            android:clickable="false"
                            android:fontFamily="@font/e_ukraine_medium"
                            android:text="Зробити сторіс"
                            android:textColor="#0F1547"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc_price" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#0f1547"
                    app:cardCornerRadius="16sp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeWidth="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <nl.dionsegijn.konfetti.xml.KonfettiView
                            android:id="@+id/konfettiView"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginTop="24dp"
                            android:background="#2c3377"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/CircleImage" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmer_view_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:layout_constraintBottom_toBottomOf="@+id/image"
                            app:layout_constraintEnd_toEndOf="@+id/image"
                            app:layout_constraintStart_toStartOf="@+id/image"
                            app:layout_constraintTop_toTopOf="@+id/image"
                            app:shimmer_base_alpha="1"
                            app:shimmer_base_color="#f0be45"
                            app:shimmer_colored="true"
                            app:shimmer_duration="2000"
                            app:shimmer_highlight_color="#CA9414">


                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_round_hotel_class_24"
                                app:layout_constraintBottom_toBottomOf="@+id/image"
                                app:layout_constraintEnd_toEndOf="@+id/image"
                                app:layout_constraintStart_toStartOf="@+id/image"
                                app:layout_constraintTop_toTopOf="@+id/image"
                                app:tint="#f0be45" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/e_ukraine_medium"
                            android:gravity="center"
                            android:text="Оформити підписку"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="#FFFFFF"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image"
                            app:layout_constraintVertical_chainStyle="packed" />


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="24dp"
                            android:fontFamily="@font/e_ukraine_regular"
                            android:gravity="center"
                            android:text="Підтримай українське 🇺🇦"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="#FFFFFF"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_title" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.ribsky.shop.view.ItemShopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    custom:shopColor="#D1C4E9"
                    custom:shopDescription="Доступ до всіх уроків"
                    custom:shopIcon="🔔"
                    custom:shopTitle="Уроки 🔔" />

                <com.ribsky.shop.view.ItemShopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    custom:shopColor="#B3E5FC"
                    custom:shopDescription="Доступ до всіх тестів"
                    custom:shopIcon="📚"
                    custom:shopTitle="Тести 📚" />

                <com.ribsky.shop.view.ItemShopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    custom:shopColor="#C7E5C8"
                    custom:shopDescription="Доступ до всіх режимів гри"
                    custom:shopIcon="🎮"
                    custom:shopTitle="Ігри 🎮" />

                <com.ribsky.shop.view.ItemShopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    custom:shopColor="#E0BCFF"
                    custom:shopDescription="Можливість зберігати слова для роботи над помилками"
                    custom:shopIcon="❤"
                    custom:shopTitle="Обране ❤" />

                <com.ribsky.shop.view.ItemShopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    custom:shopColor="#FFEB3B"
                    custom:shopDescription="Невиличкий прапорець біля твого імені, котрий виділяє тебе"
                    custom:shopIcon="🇺🇦"
                    custom:shopTitle="Прапорець 🇺🇦" />

                <com.ribsky.shop.view.ItemShopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    custom:shopColor="#DCEDC8"
                    custom:shopDescription="Підказки в уроках, які допоможуть проходити їх швидше"
                    custom:shopIcon="💡"
                    custom:shopTitle="Підказки 💡" />

                <com.ribsky.shop.view.ItemShopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    custom:shopColor="#FF8A65"
                    custom:shopDescription="До 25 відповідей від кота-помічника на день"
                    custom:shopIcon="😺"
                    custom:shopTitle="Кіт-помічник 😺" />

                <com.ribsky.shop.view.ItemShopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    custom:shopColor="#FFECB3"
                    custom:shopDescription="Менша ніж один урок у репетитора"
                    custom:shopIcon="🎁"
                    custom:shopTitle="Ціна 🎁" />


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/e_ukraine_regular"
                    android:paddingBottom="36dp"
                    android:text="Підписка прив'язується до твого платіжного облікового запису"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialCardView69" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sub"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:backgroundTint="#2c3377"
                    android:fontFamily="@font/e_ukraine_medium"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tool:text="Оформить подписку" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_restore"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="36dp"
                    android:fontFamily="@font/e_ukraine_medium"
                    android:text="Відновити покупки"
                    android:textColor="#2c3377"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/circle_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:progress="23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>